 printtriangle vacío estático público (carácter de carácter, líneas int) {
 estrellas int = 1; // Número inicial de personas por línea

 para (int i = 1; i <= líneas; i++) {
 // Imprimir los personajes en la línea actual
 para (int j = 1; j <= estrellas; j++) {
 System.out.print(caracter);
            }
 System.out.println(); // Saltar a la siguiente línea
 estrellas += 2; // Incrementar el número de personas en la siguiente línea
        }
    }
